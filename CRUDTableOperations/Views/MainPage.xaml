<Page
    x:Class="CRUDTableOperations.Views.MainPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:CRUDTableOperations.Properties"
    mc:Ignorable="d"
    d:DesignHeight="600" d:DesignWidth="1024">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Server and Database Selection Card -->
            <Border 
                Grid.Row="1"
                Margin="0,0,0,15"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="{DynamicResource MahApps.Brushes.Gray3}"
                Background="{DynamicResource MahApps.Brushes.Gray10}"
                Effect="{DynamicResource MahApps.DropShadowEffect}">

                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Section Title -->
                    <TextBlock 
                        Grid.Row="0"
                        Text="DATABASE CONNECTION" 
                        FontSize="18" 
                        FontWeight="Bold" 
                        Margin="0,0,0,15" 
                        Foreground="{DynamicResource MahApps.Brushes.Accent}"/>

                    <!-- Connection Settings -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Server & Database & Table Selection -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <!-- Server Selection -->
                            <TextBlock 
                                Text="Server" 
                                FontWeight="Medium" 
                                Margin="0,0,0,5"/>
                            <TextBox
                                x:Name="ServerTextBox"
                                Height="32"
                                Padding="8,0"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,15"
                                TextChanged="ServerTextBox_TextChanged" />

                            <!-- Database Selection -->
                            <TextBlock 
                                Text="Database" 
                                FontWeight="Medium" 
                                Margin="0,0,0,5"/>
                            <ComboBox
                                x:Name="DatabaseComboBox"
                                Height="32"
                                Padding="8,0"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,15"
                                SelectionChanged="DatabaseComboBox_SelectionChanged" />

                            <!-- Table Selection - Opens New Window -->
                            <TextBlock 
                                Text="Select Table to Open" 
                                FontWeight="Medium" 
                                Margin="0,0,0,5"/>
                            <ComboBox
                                x:Name="TableComboBox"
                                Height="32"
                                Padding="8,0"
                                VerticalContentAlignment="Center" />
                        </StackPanel>

                        <!-- Authentication Settings -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock 
                                Text="Authentication" 
                                FontWeight="Medium" 
                                Margin="0,0,0,10"/>

                            <!-- Authentication Method Selection -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <RadioButton 
                                    x:Name="rdoWindowsAuth" 
                                    Content="Windows Authentication" 
                                    GroupName="AuthMethod" 
                                    Margin="0,0,15,0"
                                    IsChecked="True"
                                    Checked="AuthMethod_Checked"/>
                                <RadioButton 
                                    x:Name="rdoSqlAuth" 
                                    Content="SQL Server Authentication" 
                                    GroupName="AuthMethod" 
                                    Checked="AuthMethod_Checked"/>
                            </StackPanel>

                            <!-- SQL Authentication Fields -->
                            <StackPanel 
                                x:Name="SqlAuthPanel" 
                                Visibility="Collapsed"
                                Margin="0,0,0,10">

                                <!-- Username -->
                                <TextBlock 
                                    Text="Username" 
                                    FontWeight="Medium" 
                                    Margin="0,0,0,5"/>
                                <TextBox
                                    x:Name="txtUsername"
                                    Height="32"
                                    Padding="8,0"
                                    VerticalContentAlignment="Center"
                                    Margin="0,0,0,10" />

                                <!-- Password -->
                                <TextBlock 
                                    Text="Password" 
                                    FontWeight="Medium" 
                                    Margin="0,0,0,5"/>
                                <PasswordBox
                                    x:Name="txtPassword"
                                    Height="32"
                                    Padding="8,0"
                                    VerticalContentAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Connect/Disconnect Button with Status -->
                    <Grid Grid.Row="2" Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Connection Status Badge -->
                        <StackPanel 
                            Grid.Column="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                            <Ellipse 
                                x:Name="ConnectionStatusBadge"
                                Width="16" 
                                Height="16" 
                                Fill="Red"
                                Margin="0,0,8,0"/>
                            <TextBlock 
                                x:Name="ConnectionStatusText"
                                Text="Disconnected" 
                                FontWeight="SemiBold"
                                Foreground="Red"
                                VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Connect/Disconnect Button -->
                        <Button
                            Grid.Column="1"
                            x:Name="ConnectButton"
                            Content="Connect"
                            FontWeight="SemiBold"
                            Height="36"
                            Width="120"
                            HorizontalAlignment="Right"
                            Background="{DynamicResource MahApps.Brushes.Accent}"
                            Foreground="White"
                            Click="ConnectButton_Click" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>