<Window
    x:Class="CRUDTableOperations.Views.TableWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Table Window"
    Height="750"
    Width="1200"
    WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- CRUD Operations Card -->
            <Border 
                Grid.Row="0"
                Margin="0,0,0,15"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="{DynamicResource MahApps.Brushes.Gray3}"
                Background="{DynamicResource MahApps.Brushes.Gray10}">

                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Section Title -->
                    <TextBlock 
                        Grid.Row="0"
                        Text="DATA OPERATIONS" 
                        FontSize="18" 
                        FontWeight="SemiBold" 
                        Margin="0,0,0,15" 
                        Foreground="{DynamicResource MahApps.Brushes.Accent}"/>

                    <!-- CRUD Buttons -->
                    <UniformGrid 
                        Grid.Row="1"
                        Rows="1"
                        HorizontalAlignment="Center">
                        <Button 
                            x:Name="btnCreate" 
                            Content="Create" 
                            Height="36"
                            Margin="5,0"
                            Background="#28a745"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Click="btnCreate_Click"/>
                        <Button 
                            x:Name="btnUpdate" 
                            Content="Update" 
                            Height="36"
                            Margin="5,0"
                            Background="#17a2b8"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Click="btnUpdate_Click"/>
                        <Button 
                            x:Name="btnDelete" 
                            Content="Delete" 
                            Height="36"
                            Margin="5,0"
                            Background="#dc3545"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Click="btnDelete_Click"/>
                        <Button 
                            x:Name="btnSave" 
                            Content="Save Changes" 
                            Height="36"
                            Margin="5,0"
                            Background="#007bff"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Click="btnSave_Click"/>
                        <Button 
                            x:Name="btnCancel" 
                            Content="Cancel" 
                            Height="36"
                            Margin="5,0"
                            Background="#6c757d"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Click="btnCancel_Click"/>
                        <Button 
                            x:Name="btnRefresh" 
                            Content="Refresh" 
                            Height="36"
                            Margin="5,0"
                            Background="#ffc107"
                            Foreground="#212529"
                            FontWeight="SemiBold"
                            Click="btnRefresh_Click"/>
                    </UniformGrid>
                </Grid>
            </Border>

            <!-- Filter Card -->
            <Border 
                x:Name="FilterPanel"
                Grid.Row="1"
                Margin="0,0,0,15"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="{DynamicResource MahApps.Brushes.Gray3}"
                Background="{DynamicResource MahApps.Brushes.Gray10}">

                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Section Title -->
                    <TextBlock 
                        Grid.Row="0"
                        x:Name="FilterTextBlock"
                        Text="FILTER DATA" 
                        FontSize="18" 
                        FontWeight="SemiBold" 
                        Margin="0,0,0,15" 
                        Foreground="{DynamicResource MahApps.Brushes.Accent}"/>

                    <!-- Filter Controls -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Filter 1 -->
                        <StackPanel 
                            Grid.Column="0"
                            Margin="0,0,10,0">
                            <TextBlock 
                                Text="Column" 
                                FontWeight="Medium" 
                                Margin="0,0,0,5"/>
                            <ComboBox 
                                x:Name="cmbColumn1" 
                                Height="32"
                                Padding="8,0"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,10"/>
                            <TextBlock 
                                Text="Value" 
                                FontWeight="Medium" 
                                Margin="0,0,0,5"/>
                            <TextBox 
                                x:Name="txtFilter1" 
                                Height="32"
                                Padding="8,0"
                                VerticalContentAlignment="Center"
                                TextChanged="ApplyFilter"/>
                        </StackPanel>

                        <!-- Filter 2 -->
                        <StackPanel 
                            Grid.Column="1"
                            Margin="10,0">
                            <TextBlock 
                                Text="Column" 
                                FontWeight="Medium" 
                                Margin="0,0,0,5"/>
                            <ComboBox 
                                x:Name="cmbColumn2" 
                                Height="32"
                                Padding="8,0"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,10"/>
                            <TextBlock 
                                Text="Value" 
                                FontWeight="Medium" 
                                Margin="0,0,0,5"/>
                            <TextBox 
                                x:Name="txtFilter2" 
                                Height="32"
                                Padding="8,0"
                                VerticalContentAlignment="Center"
                                TextChanged="ApplyFilter"/>
                        </StackPanel>

                        <!-- Filter 3 -->
                        <StackPanel 
                            Grid.Column="2"
                            Margin="10,0,0,0">
                            <TextBlock 
                                Text="Column" 
                                FontWeight="Medium" 
                                Margin="0,0,0,5"/>
                            <ComboBox 
                                x:Name="cmbColumn3" 
                                Height="32"
                                Padding="8,0"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,10"/>
                            <TextBlock 
                                Text="Value" 
                                FontWeight="Medium" 
                                Margin="0,0,0,5"/>
                            <TextBox 
                                x:Name="txtFilter3" 
                                Height="32"
                                Padding="8,0"
                                VerticalContentAlignment="Center"
                                TextChanged="ApplyFilter"/>
                        </StackPanel>

                        <!-- Clear Filter Button -->
                        <Button 
                            Grid.Column="3"
                            x:Name="btnClearFilter"
                            Content="Clear Filter" 
                            Height="36"
                            Width="120"
                            Margin="20,32,0,0"
                            VerticalAlignment="Top"
                            Background="#6c757d"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Click="btnClearFilter_Click"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Data Grid Card -->
            <Border 
                Grid.Row="2"
                Margin="0,0,0,20"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="{DynamicResource MahApps.Brushes.Gray3}"
                Background="{DynamicResource MahApps.Brushes.Gray10}">

                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Data Grid Header -->
                    <DockPanel 
                        Grid.Row="0"
                        LastChildFill="False"
                        Margin="0,0,0,10">
                        <TextBlock 
                            Text="DATA VIEW" 
                            FontSize="18" 
                            FontWeight="SemiBold" 
                            Foreground="{DynamicResource MahApps.Brushes.Accent}"
                            DockPanel.Dock="Left"/>

                        <!-- Page Info -->
                        <TextBlock 
                            x:Name="txtPageInfo"
                            Text="Page 1 of 1"
                            FontSize="14"
                            VerticalAlignment="Center"
                            Margin="20,0"
                            DockPanel.Dock="Right"/>

                        <!-- Pagination Controls -->
                        <StackPanel 
                            DockPanel.Dock="Right"
                            Orientation="Horizontal">
                            <Button 
                                Content="&#11164;"
                                Height="30"
                                Width="30"
                                Margin="5,0"
                                Click="btnPreviousPage_Click"/>
                            <Button 
                                Content="&#x2B9E;"
                                Height="30"
                                Width="30"
                                Margin="5,0"
                                Click="btnNextPage_Click"/>
                        </StackPanel>
                    </DockPanel>

                    <!-- DataGrid -->
                    <DataGrid
                        Grid.Row="1"
                        x:Name="DataGridResults" 
                        AutoGenerateColumns="True"
                        CanUserAddRows="False"
                        IsReadOnly="False"
                        Background="White"
                        AlternatingRowBackground="#f8f9fa"
                        GridLinesVisibility="Horizontal"
                        HorizontalGridLinesBrush="#dee2e6"
                        RowHeaderWidth="40"
                        ColumnHeaderHeight="40"
                        HeadersVisibility="All"
                        BorderThickness="1"
                        BorderBrush="#dee2e6"/>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>